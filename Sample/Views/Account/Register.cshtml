@model Sample.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}


    <div class="register-box">
        <div class="register-logo">
            <a href="../../index2.html">Material<b>Admin</b>LTE</a>
        </div>

        <div class="register-box-body">
            <p class="login-box-msg">Register a new membership</p>

            @using (Html.BeginForm("Register", "Account"))
            {@Html.AntiForgeryToken()
        <div class="form-group has-feedback">
            @Html.TextBoxFor(x => x.FullName, new { PlaceHolder = " Enter Your FUll Name", @class = "form-control", required = "required" })
           
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
            <div class="form-group has-feedback">
              @Html.TextBoxFor(x => x.Email, new { PlaceHolder = " Enter Your Email", @class = "form-control", required = "required"})
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.TextBoxFor(x => x.Password, new { PlaceHolder = "Enter Password Here", @class = "form-control", type = "password", required = "required" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.TextBoxFor(x => x.ConfrimPassword, new { PlaceHolder = "Enter Password Here", @class = "form-control", type = "password", required = "required" })
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-7">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"> I agree to the <a href="#">terms</a>
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-5">
                    <button type="submit" class="btn btn-primary btn-raised btn-block btn-flat">Register</button>
                </div>
                <!-- /.col -->
            </div>
        }

            <div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                    <i class="fa fa-facebook"></i> Sign up using
                    Facebook
                </a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                    <i class="fa fa-google-plus"></i> Sign up using
                    Google+
                </a>
            </div>

            <a href="login.html" class="text-center">I already have a membership</a>
        </div>
        <!-- /.form-box -->
    </div>

